<main class="container">
    <h1>Welcome {{currentUser.dataValues.user_name}}!</h1>
    <h6>
        Do you dare to build a trash animal that can defeat our squad of trash
        animals? Choose your advantage wisely!
    </h6>
    <form class="col s12 offset-m3 m6" id="character-name-form">
        <div class="input-field col s10">
            <input placeholder="Enter your character name here." id="character_name" type="text" class="validate" name="name" />
        </div>
    </form>
    <form action="#" id="advantage-chosen" name="name">
        <p>
            <label>
                <input class="with-gap" name="advantage" type="radio" value="strength"/>
                <span>STRENGTH</span>
            </label>
        </p>
        <p>
            <label>
                <input class="with-gap" name="advantage" type="radio" value="HP"/>
                <span>HP</span>
            </label>
        </p>
        <p>
            <label>
                <input class="with-gap" name="advantage" type="radio" value="defense"/>
                <span>DEFENSE</span>
            </label>
        </p>
    </form>
    <h6>Select an icon for your character:</h6>

    <div class="carousel">
        <a class="carousel-item" href="#one!" id="racoon"><img src="./assets/images/trash-raccoon.png"></a>
        <a class="carousel-item" href="#two!" id="pigeon"><img src="./assets/images/trash-pigeon.png"></a>
        <a class="carousel-item" href="#three!" id="possum"><img src="./assets/images/trash-possom.png"></a>
        <a class="carousel-item" href="#four!" id="fox"><img src="./assets/images/trash-fox.png"></a>
        <a class="carousel-item" href="#five!" id="rat"><img src="./assets/images/trash-rat.png"></a>
    </div>
    <button class="btn btn-large waves-effect waves-light" type="submit" name="action" id="view-all-characters">SAVE CHARACTER AND VIEW ALL CHARACTERS
  </button>

  <button class="btn btn-large waves-effect waves-light" type="submit" name="action" id="add-new-character">SAVE CHARACTER AND ADD NEW CHARACTER
  </button>
</main>

<script type="text/javascript" src="./assets/js/createCharacter.js"></script>